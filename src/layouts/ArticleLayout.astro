---
import PageLayout from './PageLayout.astro';

interface Props {
  title: string;
}

const {title} = Astro.props;
---

<PageLayout title={title}>
  <div class="flex flex-row justify-center px-4 max-w-100dvw">
    <article class="prose prose-lg prose-green dark:prose-invert max-w-full">
      <slot />
    </article>
  </div>
</PageLayout>
