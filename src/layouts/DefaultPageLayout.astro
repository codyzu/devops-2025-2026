---
import "@unocss/reset/tailwind.css";
import "uno.css";
import "./index.css";

const { frontmatter } = Astro.props;
---

<html>
  <head>
    <meta charset="utf-8" />
  </head>
  <body>
    <article class="prose dark:prose-invert p-4">
      <h1>{frontmatter.title}</h1>
      <p>{frontmatter.description}</p>
      <slot />
    </article>
  </body>
</html>
