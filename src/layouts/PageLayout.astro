---
import '@unocss/reset/tailwind.css';
import 'uno.css';
import './index.css';

interface Props {
  title: string;
}

const {title} = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title ?? 'RES507'}</title>
  </head>
  <body>
    <header
      class="fixed top-0 left-0 right-0 h-14 border-b border-black/10 bg-white/90 backdrop-blur"
    >
      <nav
        class="h-full flex items-center px-4 font-600 tracking-wide text-xl"
        aria-label="Primary"
      >
        <a href="/" class="">
          <div class="flex flex-row gap-2 items-center">
            <span class="i-tabler-terminal-2"></span>
            <span>RES507</span>
          </div>
        </a>
      </nav>
    </header>
    <main class="pt-14">
      <slot />
    </main>
  </body>
</html>
