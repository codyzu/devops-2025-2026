---
import '@unocss/reset/tailwind.css';
import 'uno.css';
import Logo from '../assets/logo.svg';
import {withBase} from '../lib/paths';
import './index.css';

interface Props {
  title: string;
}

const {title} = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <link rel="icon" type="image/svg+xml" href={withBase('favicon.svg')} />
    <title>{title ?? 'RES507'}</title>
  </head>
  <body>
    <header
      class:list={[
        'fixed top-0 left-0 right-0 z-50 h-14 mx-4 sm:mx-6 lg:mx-10 mt-1',
        'border-b border-black/5 dark:border-white/10',
        'bg-white/60 dark:bg-black/50',
        '[backdrop-filter:blur(12px)_saturate(180%)]',
        '[-webkit-backdrop-filter:blur(12px)_saturate(180%)]',
      ]}
    >
      <nav
        class="h-full flex items-center px-2 font-600 tracking-wide text-xl"
        aria-label="Primary"
      >
        <a href={withBase('')} class="" aria-label="Home">
          <div
            class:list={[
              'relative',
              'flex flex-row gap-2 items-center',
              'h-10 px-5 rounded-full',
              'bg-white/70 dark:bg-black/60',
              'border border-black/10 dark:border-white/15',
            ]}
          >
            <Logo class="h-9 w-12" />
            <span>RES507</span>
          </div>
        </a>
      </nav>
    </header>
    <main class="pt-15">
      <slot />
    </main>
  </body>
</html>
